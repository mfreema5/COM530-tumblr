%html{:lang => "en"}
  %head
    %title Practically an impact
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
    %link{:href => "css/reset.css", :media => "screen,print", :rel => "stylesheet"}/
    %link{:href => "css/screen.css", :rel => "stylesheet"}/
  %body
    %main
      %h1
        Practically an impact
      %article#text
        .label
          %h2
            Posted
        {block:Text}
        %section
          {block:Title}
          %h3
            {Title}
          {/block:Title}
          {Body}
        {/block:Text}
      %article#quote
        .label
          %h2
            Read
        {block:Quote}
        %section
          %blockquote
            {Quote}
          {block:Source}
          .source
            {Source}
          {/block:Source}
        {/block:Quote}
      %article#photo
        %h2
          Framed
        {block:Photo}
        {/block:Photo}
      %article#link
        %h2
          Linked
        {block:Link}
        %section
          .link
          %a{href:"{URL}"} {Name}
          {block:Thumbnail}
          %a{href:"{URL}"} {Thumbnail}
          {block:Host}
          .caption
            via {Host}
          {/block:Host}
          {/block:Thumbnail}
          {block:Description}
          .describe
            {Description}
          {/block:Description}
        {/block:Link}
    %nav
    %footer




